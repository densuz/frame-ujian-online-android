<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="false" android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/am_divider_bold" android:color="@color/colorButtonPrimary" />
            <solid android:color="@color/colorButtonPrimary" />
            <corners android:radius="@dimen/radius_normal" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/am_divider_bold" android:color="@color/colorButtonPrimaryPressed" />
            <solid android:color="@color/colorButtonPrimaryPressed" />
            <corners android:radius="@dimen/radius_normal" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/am_divider_bold" android:color="@color/colorButtonPrimaryDisabled" />
            <solid android:color="@color/colorButtonPrimaryDisabled" />
            <corners android:radius="@dimen/radius_normal" />
        </shape>
    </item>

</selector>